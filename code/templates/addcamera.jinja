                    </tr>
                  {% for ec2 in activeEc2 %}
                    <tr>
                      <td><a href="#" class="camera_instance">{{ ec2.url }}</a></td>
                      <td>{{ ec2.camera_id }}</td>
                      <td>
                      {% if ec2.status == 0 %}
                        <strong style="color: slategray;"><i class="fad fa-spinner fa-pulse"></i> Creating</strong>
                      {% elif ec2.status == 1 %}
                        <strong style="color: green;"><i class="fad fa-check-circle"></i> Operation Normal</strong>
                      {% elif ec2.status == 2 %}
                        <strong style="color: red;"><i class="fad fa-dizzy"></i> Unreachable</strong>
                      {% endif %}
                      </td>
                      <td><button class="btn btn-danger btn-sm camera_remove" id="{{ ec2.camera_id }}_remove"><i class="fad fa-video-slash"></i> Remove CCTV (*.m3u8)</button></td>
