    <script type="text/javascript">
        $('#camera_add').click(function() {
            let m3u8_stream = $('#m3u8_stream').val().trim();
            let camera_id = $('#camera_id').val().trim();
            if (m3u8_stream === '' || camera_id === '') {
                alert('Please fill in the CCTV details!');
                return;
            }
            if (!m3u8_stream.startsWith('https://')) {
                alert('Stream URL must start with https:// !');
                return;
            }
            $(`<tr><td><a href="#" class="camera_instance">${m3u8_stream}</a></td><td>${camera_id}</td><td><strong style="color: slategray;"><i class="fad fa-spinner fa-pulse"></i> Creating</strong></td><td></td></tr>`).insertAfter($('#urlFirstRow'));
            $('.camera_instance').off('click');
            $('.camera_instance').click(camClickCallback);

            fetch(`/provision`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({url: m3u8_stream, camera_id: camera_id})
              })
            .then(res => res.json())
            .then(res => {
                console.log(res);
            });
        });
        $('.camera_remove').click(function(evt) {
            console.log(evt);
            fetch(`/unprovision`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({camera_id: $(evt.target).parent().parent().children()[1].textContent})
              })
            .then(res => res.json())
            .then(res => {
                console.log(res);
            });
        });

        let camClickCallback = function(evt){
            $('.camera_instance').css('background', 'transparent');
            $(evt.target).css('background', 'yellow');
            fetch('/switchCamera', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    camera_id: $(evt.target).parent().next().text()
                })
            });
            //TODO TODO TODO TODO
        };
        $('.camera_instance').click(camClickCallback);
    </script>
